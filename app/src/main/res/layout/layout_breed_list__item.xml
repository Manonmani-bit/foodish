<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/padding_8"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    card_view:cardCornerRadius="@dimen/padding_8"
    card_view:cardElevation="@dimen/padding_8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_breed"
            android:layout_width="@dimen/image_breed_list_width"
            android:layout_height="@dimen/image_breed_list_width"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/padding_16"
            android:scaleType="centerCrop"
            tools:src="@drawable/iv_bananas" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/padding_16"
            android:layout_marginTop="@dimen/padding_16"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_breed_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/breed_name_text"
                android:textStyle="bold"
                tools:text="Natural Red Apple" />

            <TextView
                android:id="@+id/tv_breed_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_10"
                android:layout_marginBottom="@dimen/padding_10"
                android:ellipsize="end"
                android:maxLines="5"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/bread_description"
                tools:text="1kg, Price" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>